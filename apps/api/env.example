# ===== SHARED CONFIGURATION =====
NODE_ENV=development
LOG_LEVEL=info
PORT=3001
API_VERSION=v1

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://user:password@localhost:5432/globalnext
DATABASE_SSL=false
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# ===== CACHE & QUEUES =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=globalnext:

# BullMQ Configuration
BULLMQ_REDIS_URL=redis://localhost:6379
BULLMQ_CONCURRENCY=5

# ===== STORAGE CONFIGURATION =====
STORAGE_PROVIDER=s3
S3_BUCKET=globalnext-files
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT=https://s3.amazonaws.com

# Azure Blob Storage (alternative)
AZURE_STORAGE_ACCOUNT=your-account
AZURE_STORAGE_KEY=your-key
AZURE_STORAGE_CONTAINER=globalnext-files

# ===== AUTHENTICATION & AUTHORIZATION =====
# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# OIDC Configuration (Azure AD / Google)
OIDC_ISSUER=https://login.microsoftonline.com/your-tenant-id/v2.0
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_SCOPE=openid profile email

# Google OAuth (alternative)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# MFA Configuration
MFA_ISSUER=Global Next
MFA_ALGORITHM=SHA1
MFA_DIGITS=6
MFA_PERIOD=30

# ===== EMAIL CONFIGURATION =====
SMTP_URL=smtp://user:password@mail.example.com:587
SMTP_FROM=noreply@global-next.com
SMTP_REPLY_TO=support@global-next.com

# Email Templates
EMAIL_TEMPLATES_PATH=./templates/email

# ===== EXTERNAL API INTEGRATIONS =====
# SEMrush API
SEMRUSH_API_KEY=your-semrush-api-key
SEMRUSH_BASE_URL=https://api.semrush.com

# DocuSign Integration
DOCUSIGN_CLIENT_ID=your-docusign-client-id
DOCUSIGN_CLIENT_SECRET=your-docusign-client-secret
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi

# Adobe Sign Integration
ADOBE_SIGN_CLIENT_ID=your-adobe-sign-client-id
ADOBE_SIGN_CLIENT_SECRET=your-adobe-sign-client-secret
ADOBE_SIGN_BASE_URL=https://api.na1.adobesign.com

# QuickBooks Integration
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_SANDBOX_URL=https://sandbox-quickbooks.api.intuit.com
QUICKBOOKS_PRODUCTION_URL=https://quickbooks.api.intuit.com

# Zoho Integration
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_BASE_URL=https://www.zohoapis.com

# Mapbox Integration
MAPBOX_TOKEN=your-mapbox-token
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v11

# ===== CARRIER INTEGRATIONS =====
# Maersk API
MAERSK_API_KEY=your-maersk-api-key
MAERSK_BASE_URL=https://api.maersk.com
MAERSK_WEBHOOK_SECRET=your-maersk-webhook-secret

# MSC API
MSC_API_KEY=your-msc-api-key
MSC_BASE_URL=https://api.msc.com
MSC_WEBHOOK_SECRET=your-msc-webhook-secret

# CMA CGM API
CMA_API_KEY=your-cma-api-key
CMA_BASE_URL=https://api.cma-cgm.com
CMA_WEBHOOK_SECRET=your-cma-webhook-secret

# DHL API
DHL_API_KEY=your-dhl-api-key
DHL_BASE_URL=https://api.dhl.com
DHL_WEBHOOK_SECRET=your-dhl-webhook-secret

# FedEx API
FEDEX_API_KEY=your-fedex-api-key
FEDEX_SECRET_KEY=your-fedex-secret-key
FEDEX_BASE_URL=https://api.fedex.com
FEDEX_WEBHOOK_SECRET=your-fedex-webhook-secret

# ===== SECURITY & ENCRYPTION =====
# PII Encryption
ENCRYPTION_KEY=your-encryption-key-here
KMS_PROVIDER=aws
KMS_REGION=us-east-1
KMS_KEY_ID=your-kms-key-id

# Webhook Signing
WEBHOOK_SECRET=your-webhook-signing-secret
TOKENIZATION_SECRET=your-tokenization-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ===== MONITORING & LOGGING =====
# Application Insights
APPINSIGHTS_INSTRUMENTATION_KEY=your-appinsights-key
APPINSIGHTS_CONNECTION_STRING=your-appinsights-connection-string

# Sentry
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===== ANALYTICS & REPORTING =====
# Google Analytics
GA_TRACKING_ID=your-ga-tracking-id
GA_MEASUREMENT_ID=your-ga-measurement-id

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# ===== VIRUS SCANNING =====
VIRUS_SCAN_PROVIDER=clamav
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
CLAMAV_TIMEOUT=5000

# Alternative: VirusTotal
VIRUSTOTAL_API_KEY=your-virustotal-api-key
VIRUSTOTAL_BASE_URL=https://www.virustotal.com/vtapi/v2

# ===== OCR CONFIGURATION =====
OCR_PROVIDER=tesseract
TESSERACT_LANGUAGE=eng
TESSERACT_PSM=6

# Alternative: Google Vision API
GOOGLE_VISION_API_KEY=your-google-vision-api-key
GOOGLE_VISION_BASE_URL=https://vision.googleapis.com/v1

# ===== BLOCKCHAIN INTEGRATION =====
# Ethereum (for document anchoring)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key
ETHEREUM_CONTRACT_ADDRESS=your-contract-address

# Alternative: Bitcoin
BITCOIN_RPC_URL=https://api.blockcypher.com/v1/btc/main
BITCOIN_API_TOKEN=your-bitcoin-api-token

# ===== DEVELOPMENT & TESTING =====
# Test Database
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/globalnext_test

# Test Redis
TEST_REDIS_URL=redis://localhost:6379/1

# Mock Services
MOCK_EXTERNAL_APIS=false
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false

# ===== FEATURE FLAGS =====
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_HS_CODE_SUGGESTIONS=true
ENABLE_DEMURRAGE_RISK_CALCULATION=true
ENABLE_UTILIZATION_FORECASTING=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_WEBHOOK_DELIVERY=true
ENABLE_TOKENIZATION_BRIDGE=true

# ===== PERFORMANCE TUNING =====
# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Connection Pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_IDLE_TIMEOUT=30000

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# ===== CORS CONFIGURATION =====
CORS_ORIGIN=http://localhost:3000,https://app.global-next.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-API-Key

# ===== HEALTH CHECK =====
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# ===== GRACEFUL SHUTDOWN =====
GRACEFUL_SHUTDOWN_TIMEOUT=30000
SIGTERM_TIMEOUT=10000
SIGINT_TIMEOUT=10000